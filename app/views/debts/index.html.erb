<% if user_signed_in? %>

    <h3>Active Debts</h3>
      <table class="table table-striped table-bordered table-condensed">
        <tr>
          <th>User</th>
          <th>Amount</th>
        </tr>

        <% @debts.each do |debt| %>
            <% if debt.creditor.username != current_user.username %>
              <tr>
                <td><%= debt.creditor.username %></td>
                <td contenteditable='true'><%= number_to_currency(debt.cost) %></td>

                <td>
                  <div class="debt_button">
                    <%= button_to "Resolve", debt, :method => :delete, :class => "btn btn-danger btn-block" %>
                  </div>
                </td>
              </tr>
            <% end %>
        <% end %>
      </table>


    <h3>Active Credits</h3>
      <table class="table table-striped table-bordered table-condensed">
        <tr>
          <th>User</th>
          <th>Amount</th>
        </tr>

        <% @credits.each do |credit| %>
            <% if credit.debtor.username != current_user.username %>
              <tr>
                <td><%= credit.debtor.username %></td>
                <td><%= number_to_currency(credit.cost) %></td>

                <td>
                  <div class="debt_button">
                    <%= button_to "Resolve", credit, :class => "btn btn-danger btn-block", :method => :delete %>
                  </div>
                </td>
              </tr>
            <% end %>
        <% end %>
      </table>

<% else %>
    <div class="jumbotron">
      <h1>Welcome, new user!</h1>
      <p class="lead">
        You must sign in or sign up before you can access our super sweet,
        top secret content.
      </p>
      <div class="row-fluid">
        <div class="buttonHolder">
          <%= link_to "Sign In", new_user_session_path, class: "btn btn-success" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-success" %>
        </div>
      </div>
    </div>
<% end %>
