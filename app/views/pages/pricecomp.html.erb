<% if user_signed_in? %>
	<% @user = current_user %>

	<table class="table table-striped table-bordered table-condensed">
			<tr>
				<th>Product</th>
				<th>Cheapest Vendor</th>
				<th>Cost</th>
			</tr>

			<% @cheapest_prices.each do |product_name, array| %>
			<tr>
				<td><%= product_name %></td>
				<td><%= array[1] %></td>
				<td><%= number_to_currency(array[0]) %></td>
			</tr>
			<% end %>

	</table>
<% else %>
  <div class="jumbotron">
    <h1>Welcome, new user!</h1>
    <p class="lead">
      You must sign in or sign up before you can access our super sweet,
      top secret content.
    </p>
    <div class="row-fluid">
        <div class="buttonHolder">
        	<%= link_to "Sign In", new_user_session_path, class: "btn btn-success" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-success" %>
        </div>
    </div>
  </div>
<% end %>