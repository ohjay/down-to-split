<% if @userz.nil? || @userz.empty? %>
  No users found.
<% else %>
  <ul>
    <% @userz.each do |u| %>
      <span class="checkbox">
        <label for="shopping_trip_user_ids_<%= u.id %>">
            <input class="check_boxes optional" type="checkbox" value="<%= u.id %>" name="shopping_trip[user_ids][]" id="shopping_trip_user_ids_<%= u.id %>" />
            <%= u.username %>
        </label>
      </span>
    <% end %>
  </ul>
<% end %>
