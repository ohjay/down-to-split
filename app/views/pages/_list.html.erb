<% if @userz.nil? || @userz.empty? || (@userz.size == 1 && @userz.first == current_user) %>
  No users found.
<% else %>
  <ul>
    <% @userz.each do |u| %>
      <% unless u == current_user %>
        <span class="checkbox">
          <label for="shopping_trip_user_ids_<%= u.id %>">
              <input class="check_boxes optional" type="checkbox" value="<%= u.id %>" name="shopping_trip[user_ids][]" id="shopping_trip_user_ids_<%= u.id %>" />
              <%= u.username %>
          </label>
        </span>
      <% end %>
    <% end %>
  </ul>
<% end %>
