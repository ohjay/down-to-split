This is the debt page! Sounds fun, right?<br>

<% if user_signed_in? %>
	<span>Your debts:</span>
	<ul>
	  <% current_user.purchases.each do |p| %>
	    <li class="default-li">Cost: <%= p.cost %> owed to...</li>
	  <% end %>
	</ul>
<% else %>
  <div class="jumbotron">
    <h1>Welcome, new user!</h1>
    <p class="lead">
      You must sign in or sign up before you can access our super sweet,
      top secret content.
    </p>
    <div class="row-fluid">
        <div class="buttonHolder">
        	<%= link_to "Sign In", new_user_session_path, class: "btn btn-success" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-success" %>
        </div>
    </div>
  </div>
<% end %>
