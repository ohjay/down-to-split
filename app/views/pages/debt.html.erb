<% if user_signed_in? %>
	<h2>Your debts:</h2>
    <table class="table table-striped table-bordered table-condensed">
      <tr>
      </tr>
      <% @debts.each do |key, value| %>
      <tr>
        <% if key != current_user.username %>
        <td>
          <% if value > 0 %>
            <%= key + " owes you" %>
          <% else %>
            <%= "You owe " + key %>
          <% end %>
        </td>
        <td>
          <% if value > 0 %>
            <%= number_to_currency(value) %>
          <% else %>
            <%= number_to_currency(value * -1) %>
          <% end %>
        </td>  
        <% end %>
      </tr>
      <% end %>
    </table>
<% else %>
  <div class="jumbotron">
    <h1>Welcome, new user!</h1>
    <p class="lead">
      You must sign in or sign up before you can access our super sweet,
      top secret content.
    </p>
    <div class="row-fluid">
        <div class="buttonHolder">
        	<%= link_to "Sign In", new_user_session_path, class: "btn btn-success" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-success" %>
        </div>
    </div>
  </div>
<% end %>
