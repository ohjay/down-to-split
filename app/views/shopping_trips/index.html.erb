<% if user_signed_in? %>

  <h3>Expenses</h3>

  <table class="table table-striped table-bordered table-condensed" id="shopping_trip_table">
    <tr>
      <th>Date</th>
      <th>Vendor</th>
      <th>Made By</th>
      <th>Participants</th>
    </tr>

    <% @shopping_trips.each do |shopping_trip| %>
      <tr>
        <td><%= shopping_trip.date %></td>
        <td><%= shopping_trip.vendor.vendor_name %></td>
        <td><%= shopping_trip.payer.user_name %></td>
        <td><% shopping_trip.users.each do |user| %>
              <%= user %>
            <% end %>
        </td>
      </tr>
    <% end %>
  </table>

<% else %>
    <div class="jumbotron">
      <h1>Welcome, new user!</h1>
      <p class="lead">
        You must sign in or sign up before you can access our super sweet,
        top secret content.
      </p>
      <div class="row-fluid">
        <div class="buttonHolder">
          <%= link_to "Sign In", new_user_session_path, class: "btn btn-success" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-success" %>
        </div>
      </div>
    </div>
<% end %>
